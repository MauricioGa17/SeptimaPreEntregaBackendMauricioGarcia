<h1>Products - <a href="/cart">Mi Carrito</a></h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Price</th>
            <th>Status</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Detalle</th>
            <th>Carrito</th>
        </tr>
    </thead>
    <tbody>
        {{#each docs}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.code}}</td>
                <td>{{this.price}}</td>
                <td>{{this.status}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    <a href="/product/{{this._id}}">Detalle</a>
                </td>
                <td>
                    <button onclick='onAgregarCart({"_id": "{{this._id}}"})'>Agregar a carrito</button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

    <div>
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Siguiente</a>
        {{/if}}
    </div>
    
<script src="/static/js/products.js"></script>